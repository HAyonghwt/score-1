{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "outDir": "lib",
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": true,
        "target": "es2022",
        "esModuleInterop": true,
        "lib": [
            "es2022",
            "dom"
        ],
        "rootDir": "src",
        "skipLibCheck": true
    },
    "compileOnSave": true,
    "include": [
        "src"
    ]
}